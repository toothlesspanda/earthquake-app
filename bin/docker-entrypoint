#!/bin/bash -e

if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

if [ "$1" == "bin/rails" ] && [ "$2" == "server" ]; then
  /bin/bash ./bin/wait-for-it.sh db:5432 -t 15 -- /bin/bash -c "echo 'Database is ready.' && ./bin/rails db:prepare"
  ./bin/rails data:initial_setup
fi

# Execute the main command (e.g., rails server)
exec "${@}"
